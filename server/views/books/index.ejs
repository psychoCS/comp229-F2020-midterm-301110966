<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ---------------------------------------------------------------- -->
          <!-- FIXED THE ADD BUTTON BELOW by referencing it to the correct path -->
          <!-- ---------------------------------------------------------------- -->
          <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
          
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">Title</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Price</th>                  
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center">Edit</th>
                  <th class="text-center">Delete</th>                  
                </tr>
              </thead>

              <tbody>
                <!-- Template Row -->
                <% for(let count=0; count < books.length; count++) { %>
                
                <tr>
                  <!-- inserted the objects values with the for formula -->
                  <td class="text-center"><%= books[count].Title %></td>
                  <td class="text-center"><%= books[count].Description %></td>
                  <td class="text-center"><%= books[count].Price %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>
                  
                  <td class="text-center">
                    <!-- Edit button created with the path to the details + objectsID -->
                    <a href="/books/edit/<%= books[count]._id %>" class="btn btn-success btn-sm "><i class="fa fa-wrench"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <!-- Delete button created that will delete using objectsID -->
                    <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
                
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


